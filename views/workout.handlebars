<div class="row">
  <div class="col-auto">
    <h2>Workout View</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>{{title}}</h3>
    <p>{{description}}</p>
    <p>Created by
      {{user.first_name}}
      {{user.last_name}}
      on
      {{format_date date_created}}</p>
    {{#if logged_in}}
      <button class="btn btn-primary add-exercise">Add an exercise</button>
    {{/if}}
  </div>

  <div class="col-md-6 exercise-list">
    <h3>Current exercises:</h3>

{{#if exercises.length}}
    {{#each exercises as |exercise|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4>{{exercise.exercise_name}}</h4>
          <p>Sets: {{exercise.set_count}}</p>
          <p>Reps: {{exercise.rep_count}}</p>

        </div>
        <div class="col-md-4">
          Day
          {{exercise.assigned_day}}
        </div>
      </div>
    {{/each}}
  </div>
  {{else}}
  None
  {{/if}}
</div>

<script src="/js/workout.js"></script>