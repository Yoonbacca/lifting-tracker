<!-- Loop over each object in the workouts array -->
{{#each workouts as |workout|}}
  <div class="row mb-4 workout">
    <div class="col-md-5">
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->

        <a href="/workout/{{workout.id}}">{{workout.title}}</a>
      </h2>

      <p>Created by
        {{workout.user.first_name}}
        on
        {{format_date workout.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{workout.description}}
      </p>
    </div>
  </div>
{{/each}}