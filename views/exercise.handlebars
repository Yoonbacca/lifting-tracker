<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{first_name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Exercise:</h3>

    <form class="form new-exercise-form">
      <div class="form-group">
        <label for="exercise-name">Exercise Name:</label>
        <input class="form-input" type="text" id="exercise-name" name="exercise-name" />
      </div>
      <div class="form-group">
        <label for="exercise-desc">Rep Count:</label>
        <textarea class="form-input" id="exercise-rep" name="exercise-rep"></textarea>
      </div>
      <div class="form-group">
        <label for="exercise-desc">Set Count:</label>
        <textarea class="form-input" id="exercise-set" name="exercise-set"></textarea>
      </div>
      <div class="form-group">
        <label for="length-days">Assigned Day</label>
        <select class="form-control" id="assigned-days">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
        </select>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

